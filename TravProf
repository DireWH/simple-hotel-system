package part1TLS;


public class TravProf {
    private String travelID;
    private String firstName;
    private String lastName;
    private String address;
    private String phone;
    private float tripCost;
    private String travelType;
    private String paymentType;
    private MedCond medcond;

    TravProf(String travelID,String firstName, String lastName, String address,String phone,float tripCost,String travelType,String paymentType, MedCond medcond ){
        this.travelID=travelID;
        this.firstName=firstName;
        this.lastName=lastName;
        this.address=address;
        this.phone=phone;
        this.tripCost=tripCost;
        this.travelType=travelType;
        this.paymentType=paymentType;
        this.medcond=medcond;

    }


    public String getTravelID() {
        return travelID;
    }

    public String getFirstName() {
        return firstName;
    }

    public String getLastName() {
        return lastName;
    }

    public String getAddress() {
        return address;
    }

    public String getPhone() {
        return phone;
    }
    public String getTravelType() {
        return travelType;
    }
    public float getTripCost() {
        return tripCost;
    }
    public String getPaymentType() {
        return paymentType;
    }
    public MedCond getMedcondinfo() {
        return medcond;
    }

    public void updateTravelID(String travelID) {
        this.travelID = travelID;
    }

    public void updateFirstName(String firstName) {
        this.firstName = firstName;
    }

    public void updateLastName(String lastName) {
        this.lastName = lastName;
    }

    public void updateAddress(String address) {
        this.address = address;
    }

    public void updatePhone(String phone) {
        this.phone = phone;
    }

    public void updateTripCost(float tripCost) {
        this.tripCost = tripCost;
    }

    public void updateTravelType(String travelType) { this.travelType = travelType; }

    public void updatePaymentType(String paymentType) {
        this.paymentType = paymentType;
    }

    public void updateMedcondinfo(MedCond medcond) {
        this.medcond = medcond;
    }

    public String printAll(){

        return travelID+" "+firstName+" "+lastName+" "+address+" "+phone+" "+tripCost+" "+travelType+" "+paymentType+" "+medcond.printAll();
    }



}
